{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "types": ["node"],
    "module": "CommonJS",
    "target": "es2017",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["esnext.asynciterable", "es7", "es2017"],
    "removeComments": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules", "dist"]
}
